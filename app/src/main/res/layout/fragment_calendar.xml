<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/header_common"
            android:id="@+id/commonHeader" />

        <!-- ✅ 월 <5월> + 지역 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:id="@+id/layoutMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/btnPrevMonth"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_go"
                    android:rotationY="180"
                    app:tint="#888888"
                    android:contentDescription="이전 달" />

                <TextView
                    android:id="@+id/tvCurrentMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5월"
                    android:textColor="#1C1C1E"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="8dp" />

                <ImageView
                    android:id="@+id/btnNextMonth"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_go"
                    app:tint="#888888"
                    android:contentDescription="다음 달" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutLocationFilter"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_filter_rounded"
                android:paddingHorizontal="8dp"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tvLocationFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지역전체"
                    android:textColor="#1C1C1E"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/icon_under"
                    android:contentDescription="지역 선택" />
            </LinearLayout>
        </RelativeLayout>

        <!-- ✅ 요일 헤더 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp">
            <!-- 요일 TextView는 생략 -->
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ✅ 캘린더 -->
        <com.kizitonwose.calendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cv_dayViewResource="@layout/item_calendar_day"
            android:layout_marginTop="4dp" />

        <!-- ✅ 선택한 날짜 텍스트 -->
        <TextView
            android:id="@+id/tvSelectedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5월 21일 수요일 공연"
            android:textColor="#1C1C1E"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:visibility="visible" />

        <!-- ✅ 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E4E4E4"
            android:layout_marginBottom="16dp" />

        <!-- ✅ 공연 리스트 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDailyConcerts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            android:overScrollMode="never" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
