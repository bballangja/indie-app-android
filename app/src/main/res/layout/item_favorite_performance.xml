<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">

        <!-- 포스터 이미지 -->
        <ImageView
            android:id="@+id/imgPoster"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_poster"
            android:background="@drawable/bg_poster_border"
            android:clipToOutline="true"
            android:outlineProvider="background" />

        <!-- 텍스트 영역: 수직 정렬 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A Place Called Sound"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvVenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="코멘터리 사운드"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025.05.06 화요일"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- 좋아요 버튼 -->
        <FrameLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="16dp"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center">

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_heart_border"
                android:scaleType="centerInside"
                android:src="@drawable/ic_heart_outline"/>
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
